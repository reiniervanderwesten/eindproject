generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Review {
  id          String   @id @default(uuid())
  gebruikerId String
  eigendomId  String
  rating      Int
  comment     String
  userId      User     @relation(fields: [gebruikerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  propertyId  Property @relation(fields: [eigendomId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index(gebruikerId)
  @@index(eigendomId)
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  password    String
  name        String
  email       String
  phoneNumber String
  pictureUrl  String
  reviews     Review[]
}

model Property {
  id            String   @id @default(uuid())
  hostId        String
  title         String
  description   String
  location      String
  pricePerNight Float
  bedRoomCount  Int
  bathRoomCount Int
  maxGuestCount Int
  rating        Int
  reviews       Review[]
}
